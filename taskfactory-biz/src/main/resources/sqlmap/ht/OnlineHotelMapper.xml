  </delete>
  <insert id="save" parameterType="com.mk.taskfactory.api.dtos.ht.OnlineHotelDto" >
    insert into online_hotel (id, hotel_id, comefromtype,
    create_time, update_time, is_vaild,city_code
    )
    values (#{id,jdbcType=BIGINT}, #{hotelId,jdbcType=BIGINT}, #{comefromtype,jdbcType=INTEGER},
    #{createTime,jdbcType=TIMESTAMP}, #{updateTime,jdbcType=TIMESTAMP}, #{isVaild,jdbcType=CHAR}, #{cityCode,jdbcType=INTEGER}
