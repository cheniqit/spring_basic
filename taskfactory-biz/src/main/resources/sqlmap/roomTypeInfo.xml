<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mk.taskfactory.biz.mapper.RoomTypeInfoMapper" >
    <resultMap id="BaseResultMap" type="com.mk.taskfactory.api.dtos.TRoomTypeInfoDto">
      <id column="id" property="id" jdbcType="BIGINT" />
      <result column="roomTypeId" property="roomTypeId" jdbcType="BIGINT" />
      <result column="minArea" property="minArea" jdbcType="DECIMAL" />
      <result column="maxArea" property="maxArea" jdbcType="DECIMAL" />
      <result column="pics" property="pics" jdbcType="VARCHAR" />
      <result column="bedType" property="bedType" jdbcType="INTEGER" />
      <result column="bedSize" property="bedSize" jdbcType="VARCHAR" />
    </resultMap>
  <sql id="Base_Column_List" >
    id, roomtypeid, minarea, maxarea, pics,bedType,bedSize
  </sql>
  <select id="findByRoomTypeId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from t_roomtype_info a
    where a.roomTypeId = #{roomTypeId} limit 1
  </select>

  <insert id="saveRoomTypeInfo"  parameterType="com.mk.taskfactory.api.dtos.TRoomTypeInfoDto" >
    INSERT INTO t_roomtype_info
    (roomtypeid, minarea, maxarea, pics,bedType,bedSize)
    VALUE
    (
     #{roomTypeId}, #{minArea},#{maxArea}, #{pics}, #{bedType},
     #{bedSize}
    )
  </insert>
  
  <select id="findByHotelid" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />   
    from t_roomtype_info a where roomtypeid in(select id from t_roomtype where thotelid=#{hotelid})
  </select>

  <delete id="deleteByRoomType" parameterType="java.lang.Integer">
    delete from t_roomtype_info where roomTypeId = #{roomTypeId}
  </delete>
  <sql id="Base_Query_List" >
    <where>
      <if test="id != null">
        id = #{id}
      </if>
      <if test="roomTypeId != null">
        AND roomTypeId = #{roomTypeId}
      </if>
    </where>
  </sql>
  <select id="queryTRoomTypeInfo" resultMap="BaseResultMap" parameterType="com.mk.taskfactory.api.dtos.TRoomTypeInfoDto" >
    select
    id,<include refid="Base_Column_List" />
    from t_roomtype_info
    <include refid="Base_Query_List" />
    ORDER BY  id ASC
    <if test="pageIndex != null and pageIndex>-1 and pageSize!=null and pageSize>0" >
      limit ${pageIndex} , ${pageSize}
    </if>
  </select>
  <select id="countTRoomTypeInfo" parameterType="com.mk.taskfactory.api.dtos.TRoomTypeInfoDto" resultType="java.lang.Integer" >
    select count(*) from t_roomtype_info
    <include refid="Base_Column_List" />
  </select>
</mapper>