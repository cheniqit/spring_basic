<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mk.taskfactory.biz.mapper.ods.RoomTypeOnlinePriceMapper">

    <resultMap id="BaseResultMap" type="com.mk.taskfactory.model.ods.TRoomTypeOnlinePrice">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="hotelId" property="hotel_id" jdbcType="BIGINT"/>
        <result column="roomTypeId" property="room_type_id" jdbcType="BIGINT"/>
        <result column="price" property="price" jdbcType="DECIMAL"/>
        <result column="createTime" property="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List" >
        id, comment_id, hotel_id, hotel_name, score, grade, good_total, bad_total, medium_total,
        create_time, update_time
    </sql>
    <sql id="Base_Query_List">
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="commentId != null">
                AND comment_id = #{commentId}
            </if>
            <if test="hotelId != null">
                AND hotel_id = #{hotelId}
            </if>
            <if test="hotelName != null">
                AND hotel_name = #{hotelName}
            </if>
            <if test="grade != null">
                AND grade = #{grade}
            </if>
        </where>
    </sql>
    <select id="qureyByPramas" resultMap="BaseResultMap" parameterType="com.mk.taskfactory.api.dtos.ods.TRoomTypeOnlinePriceDto" >
        select
        <include refid="Base_Column_List" />
        from q_comment
        <include refid="Base_Query_List" />
        ORDER BY id DESC
        <if test="pageIndex != null and pageIndex>-1 and pageSize!=null and pageSize>0" >
            limit ${pageIndex} , ${pageSize}
        </if>
    </select>
    <select id="count" parameterType="com.mk.taskfactory.api.dtos.ods.TRoomTypeOnlinePriceDto" resultType="java.lang.Integer" >
        select count(*) from q_comment
        <include refid="Base_Query_List" />
        ORDER BY id DESC
    </select>
    <select id="getByPramas" resultMap="BaseResultMap" parameterType="com.mk.taskfactory.api.dtos.ods.TRoomTypeOnlinePriceDto" >
        select
        <include refid="Base_Column_List" />
        from q_comment
        <include refid="Base_Query_List" />
        ORDER BY id DESC
        limit 1
    </select>
    <delete id="delete" parameterType="java.lang.Long" >
        delete from q_comment
        where id = #{id,jdbcType=BIGINT}
    </delete>
    <insert id="insert" parameterType="com.mk.taskfactory.api.dtos.ods.TRoomTypeOnlinePriceDto" useGeneratedKeys="true" keyProperty="id">
        insert into online_hotel_price(hotel_id, room_type_id, price, create_time)
        values (#{hotelId}, #{roomTypeId}, #{price}, NOW())
    </insert>

    <delete id="deleteByCreateDate" parameterType="java.lang.String">
        DELETE FROM online_hotel_price WHERE create_time &gt;= #{todayDateStr}
    </delete>
</mapper>