<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mk.taskfactory.biz.mapper.ots.HotelMapper">
    <resultMap id="BaseResultMap" type="com.mk.taskfactory.model.THotel">
        <id column="id" property="id" />
        <result column="hotelName" property="hotelName" />
        <result column="hotelContactName" property="hotelContactName" />
        <result column="regTime" property="regTime" />
        <result column="disId" property="disId" />
        <result column="detailAddr" property="detailAddr" />
        <result column="longitude" property="longitude" />
        <result column="latitude" property="latitude" />
        <result column="openTime" property="openTime" />
        <result column="repairTime" property="repairTime" />
        <result column="roomNum" property="roomNum" />
        <result column="introduction" property="introduction" />
        <result column="traffic" property="traffic" />
        <result column="hotelPic" property="hotelPic" />
        <result column="peripheral" property="peripheral" />
        <result column="businessLicenseFront" property="businessLicenseFront" />
        <result column="businessLicenseBack" property="businessLicenseBack" />
        <result column="pms" property="pms" />
        <result column="visible" property="visible" />
        <result column="online" property="online" />
        <result column="idCardFront" property="idCardFront" />
        <result column="idCardBack" property="idCardBack" />
        <result column="retentionTime" property="retentionTime" />
        <result column="defaultLeaveTime" property="defaultLeaveTime" />
        <result column="needWait" property="needWait" />
        <result column="hotelPhone" property="hotelPhone" />
        <result column="isNewPms" property="isNewPms" />
        <result column="priority" property="priority" />
        <result column="ruleCode" property="ruleCode" />
        <result column="isthreshold" property="isthreshold" />
        <result column="pmsOptTime" property="pmsOptTime" />
        <result column="provCode" property="provCode" />
        <result column="disCode" property="disCode" />
        <result column="areaCode" property="areaCode" />
        <result column="areaName" property="areaName" />
        <result column="qtPhone" property="qtPhone" />
        <result column="hotelType" property="hotelType" />
        <result column="cityCode" property="cityCode" />
        <result column="cityId" property="cityId" />
    </resultMap>

    <select id="getCityIdByHotelId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT a.id,a.cityCode,b.cityId
        FROM  t_hotel a
         LEFT  JOIN t_city b  on a.cityCode=b.code
        WHERE a.id=#{id}
    </select>
    <sql id="Base_Column_List" >
        id,hotelName,hotelContactName, regTime, disId, detailAddr, longitude, latitude, openTime,
        repairTime, roomNum, introduction, traffic, hotelPic, peripheral, businessLicenseFront, businessLicenseBack, pms, visible, online, idCardFront
        , idCardBack, retentionTime, defaultLeaveTime, needWait, hotelPhone, isNewPms, priority, ruleCode, isthreshold, pmsOptTime, provCode, disCode
        , areaCode, areaName, qtPhone, hotelType, cityCode
    </sql>
    <sql id="Base_Query_List" >
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="hotelContactName != null">
                AND hotelContactName like  '%${hotelContactName}%'
            </if>
            <if test="disId != null">
                AND disId = #{disId}
            </if>
            <if test="hotelType != null">
                AND hotelType = #{hotelType}
            </if>
            <if test="cityCode != null">
                AND cityCode = #{cityCode}
            </if>
        </where>
    </sql>
    <select id="queryTHotel" resultMap="BaseResultMap" parameterType="com.mk.taskfactory.api.dtos.THotelDto" >
        select
        <include refid="Base_Column_List" />
        from t_hotel
        <include refid="Base_Query_List" />
        ORDER BY  id ASC
        <if test="pageIndex != null and pageIndex>-1 and pageSize!=null and pageSize>0" >
            limit ${pageIndex} , ${pageSize}
        </if>
    </select>
    <select id="countTHotel" parameterType="com.mk.taskfactory.api.dtos.THotelDto" resultType="java.lang.Integer" >
        select count(*) from t_hotel
        <include refid="Base_Query_List" />
    </select>
    <select id="getByPramas" resultMap="BaseResultMap" parameterType="com.mk.taskfactory.api.dtos.THotelDto" >
        select
        <include refid="Base_Column_List" />
        from t_hotel
        <include refid="Base_Query_List" />
        ORDER BY id DESC
        limit 1
    </select>
</mapper>