<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mk.taskfactory.biz.mapper.PromoCardTypeMapper" >
<resultMap id="BaseResultMap" type="com.mk.taskfactory.model.BPromoCardType" >
    <id column="id" property="id" />
    <result column="type" property="type"  />
    <result column="cardName" property="cardName" />
    <result column="createTime" property="createTime"  />
    <result column="price" property="price"  />
    <result column="beginUseDate" property="beginUseDate" />
    <result column="endUseDate" property="endUseDate" />
    <result column="beginUseTime" property="beginUseTime" />
    <result column="endUseTime" property="endUseTime" />
    <result column="useCityId" property="useCityId"  />
    <result column="description" property="description"/>
    <result column="cardType" property="cardType" />
    <result column="description" property="description" />
    <result column="cost" property="cost" />
    <result column="isValidity" property="isValidity" />
    <result column="num" property="num" />
  </resultMap>

    <sql id="Base_Column_List" >
        type, cardName, createTime,price,beginUseDate,endUseDate,beginUseTime,endUseTime,useCityId,
        description,cost,isValidity,num
    </sql>
  <select id="findBPromoCardTypeByType" resultMap="BaseResultMap"  parameterType="java.lang.Integer">
      select id,<include refid="Base_Column_List" />
       from b_promo_card_type
      WHERE  type=#{type} AND  isValidity='T' limit 1
  </select>
</mapper>