<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mk.taskfactory.biz.mapper.cps.CpsOrderMapper">
    <resultMap id="BaseResultMap" type="com.mk.taskfactory.biz.cps.model.CpsChannel">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="channelCode" property="channelCode" jdbcType="VARCHAR"/>
        <result column="channelName" property="channelName" jdbcType="VARCHAR"/>
        <result column="valid" property="valid" jdbcType="CHAR"/>
        <result column="createTime" property="createTime" jdbcType="TIMESTAMP" />
        <result column="createBy" property="createBy" jdbcType="VARCHAR" />
        <result column="updateTime" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="updateBy" property="updateBy" jdbcType="VARCHAR"/>
        <result column="typeId" property="typeId" jdbcType="Integer"/>
    </resultMap>

    <select id="selectChannelByParme" resultMap="BaseResultMap" parameterType="java.util.HashMap">
        select
        *
        from  cps_channel
        where  1=1
        <if test="valid != null">
            AND valid = #{valid}
        </if>
        <if test="typeId != null">
            AND typeId = #{typeId}
        </if>
        <if test="createBy != null">
            AND createBy = #{createBy}
        </if>
    </select>
</mapper>