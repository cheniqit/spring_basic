<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mk.taskfactory.biz.mapper.roomsale.RoomTypeFacilityMapper" >
  <resultMap id="BaseResultMap" type="com.mk.taskfactory.model.TRoomTypeFacility" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="roomTypeId" property="roomTypeId" jdbcType="BIGINT" />
    <result column="facId" property="facId" jdbcType="BIGINT" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, roomTypeId, facId
  </sql>
  <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from t_roomtype_facility
    where id = #{id}
  </select>
  <select id="findByRoomTypeId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from t_roomtype_facility
    where roomTypeId = #{roomTypeId}
  </select>
  <insert id="saveRoomSaleConfig"  parameterType="com.mk.taskfactory.api.dtos.TRoomTypeFacilityDto" >
    INSERT INTO t_roomtype_facility
    (roomTypeId, facId)
    VALUE
    (
      #{roomTypeId}, #{facId}
    )
  </insert>
  <delete id="deleteByRoomType" parameterType="java.lang.Integer">
    delete from t_roomtype_facility where roomTypeId = #{roomTypeId}
  </delete>
</mapper>