<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mk.ots.mapper.OtaOrderTastsMapper" >
  <resultMap id="BaseResultMap" type="com.mk.taskfactory.biz.order.model.OtaOrder" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="otaorderid" property="otaorderid" jdbcType="BIGINT" />
    <result column="hotelid" property="hotelid" jdbcType="BIGINT" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="tasktype" property="tasktype" jdbcType="INTEGER" />
    <result column="count" property="count" jdbcType="INTEGER" />
    <result column="createtime" property="createtime" jdbcType="TIMESTAMP" />
    <result column="updatetime" property="updatetime" jdbcType="TIMESTAMP" />
    <result column="executeTime" property="executeTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <resultMap id="ResultMapWithCps" type="com.mk.taskfactory.biz.order.model.OtaOrder" >
    <result column="id" property="id" jdbcType="long" />
    <result column="mid" property="mid" jdbcType="long" />
    <result column="updateTime" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="priceType" property="priceType" jdbcType="int" />
    <result column="price" property="Price" jdbcType="BigDecimal" />
    <result column="totalPrice" property="totalPrice" jdbcType="BigDecimal />
  </resultMap>

  <select id="selectByMidMoreThenMaxTime"  resultMap="ResultMapWithCps" parameterType="java.util.HashMap" >
   select
    <include refid="Blob_Column_List" />
    from b_otaorder
    where mid  in  #{mids}
     and  OrderStatus  = 180
     <![CDATA[ and  updatetime> #{maxtime}]]>
  </select>

  <select id="selectByMidLessThenMaxTime" resultMap="ResultMapWithCps" parameterType="java.util.HashMap" >
    select
    <include refid="Blob_Column_List" />
    from b_otaorder
    where mid  in  #{mids}
    and  OrderStatus  = 180
    <![CDATA[ and  updatetime< #{maxtime}]]>
  </select>

  <select id="selectFirstByMid" resultMap="BaseResultMap" parameterType="java.util.HashMap" >
    select
    from b_otaorder
    where mid   = #{mids}
  </select>

  <!-- 判断是否用户首单-->
  <select id="getFirstOrderIdByMid" resultType="long"  parameterType="java.lang.Long">
    SELECT  b.id  FROM b_otaorder b where  b.mid  =  #{mid}  and
    ((b.OrderStatus IN (140,160,180,190,200) and  b.Ordertype =1)
    or    (b.OrderStatus IN (160,180,190,200) and  b.Ordertype =2))
    order  by   id  limit  1;
  </select>
</mapper>
