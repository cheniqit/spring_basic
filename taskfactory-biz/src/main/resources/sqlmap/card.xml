<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mk.taskfactory.biz.mapper.CardMapper" >
  <resultMap id="BaseResultMap" type="com.mk.taskfactory.model.BCard" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="batch_no" property="batchNo" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="no" property="no" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="price" property="price" jdbcType="DECIMAL" />
    <result column="cost" property="cost" jdbcType="DECIMAL" />
    <result column="begin_date" property="beginDate" jdbcType="TIMESTAMP" />
    <result column="end_date" property="endDate" jdbcType="TIMESTAMP" />
      <result column="description" property="description" jdbcType="VARCHAR" />
      <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
      <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
      <result column="create_by" property="createBy" jdbcType="VARCHAR" />
      <result column="update_by" property="updateBy" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, batch_no, name, no, password, status, price, cost, begin_date,
    end_date,description,create_time,update_time,create_by,update_by
  </sql>

    <select id="findActivatedByPwd" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from b_card
        where password = #{password}
    </select>
  <select id="checkBPromoByPwd" parameterType="java.lang.String" resultMap="java.lang.Integer">
    select
    id
    from b_card
    where password = #{password}
  </select>
  <insert id="insert" parameterType="com.mk.taskfactory.model.BCard" >
    insert into b_promo(batch_no, name,no,password,status,price,
    cost,begin_date,end_date,description,create_time,update_time,
    create_by,update_by
    )
    values (
    #{batchNo}, #{name}, #{no},#{password},#{status},#{price},
    #{cost}, #{beginDate}, #{endDate}, #{description}, #{createTime}, #{updateTime},
    #{createBy}, #{updateBy}
    )
  </insert>
</mapper>