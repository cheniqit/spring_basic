<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.mk.hotel">
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller" />
    </context:component-scan>

	<import resource="db-context.xml" />

    <bean id="msgProducer" class="com.mk.hotel.message.MsgProducer" scope="singleton" init-method="startProducer" destroy-method="shutdownProducer">
        <property name="namesrvAddr" value="${rocketmq.namesrvAddr}"/>
        <property name="producerGroupName" value="hotelProducerGroup"/>
        <property name="instanceName" value="hotelProducer"/>

    </bean>


</beans>