CREATE TABLE `room_type_price_special_log` (
  `id` bigint(18) NOT NULL AUTO_INCREMENT COMMENT 'id',
  `room_type_id` bigint(18) NOT NULL COMMENT '房型id',

  `day` date NOT NULL COMMENT '日期',
  `market_price` decimal(12,2) DEFAULT NULL COMMENT '市场价挂牌价',
  `sale_price` decimal(12,2) DEFAULT NULL COMMENT '预付销售价',
  `settle_price` decimal(12,2) DEFAULT NULL COMMENT '预付结算价',

  `create_date` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间',
  `create_by` varchar(50) DEFAULT NULL COMMENT '创建人',
  `update_date` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP COMMENT '更新时间',
  `update_by` varchar(50) DEFAULT NULL COMMENT '更新人',
  `is_valid` char(1) NOT NULL DEFAULT 'T' COMMENT '是否有效标记 F,无效 T,有效',
  PRIMARY KEY (`id`),
  KEY `idx_room_type_id` (`room_type_id`,`day`)
) ENGINE=InnoDB AUTO_INCREMENT=1000 DEFAULT CHARSET=utf8 COMMENT='房型指定日价格表log';